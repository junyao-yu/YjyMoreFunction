<manifest package="com.yjymorefunctions"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".base.BaseApplication"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity-alias
            android:name=".activity.Test1"
            android:targetActivity=".activity.MainActivity"
            android:icon="@mipmap/ic_launcher_temp"
            android:label="测试icon"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".activity.Test2"
            android:targetActivity=".activity.MainActivity"
            android:icon="@mipmap/ic_launcher"
            android:label="哈哈"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity-alias>

        <activity android:name=".activity.SharePreferenceActivity"/>

        <activity android:name=".activity.HttpActivity"/>

        <activity android:name=".activity.UpDownActivity"/>

        <activity android:name=".activity.TestEventBusActivity"/>

        <activity android:name=".activity.ImageActivity"/>

        <activity android:name=".activity.TestTouchEventActivity"/>

        <activity android:name=".activity.DisplayFragmentActivity"/>

        <activity android:name=".activity.VerticalScrollActivity"/>

        <activity android:name=".activity.StorageInAppActivity"/>

        <activity android:name=".activity.RxJavaAndroidActivity"/>

        <activity android:name=".activity.GreenDaoActivity"/>

        <activity android:name=".activity.RulerActivity"/>

        <activity android:name=".activity.BehaviourActivity"/>

        <activity android:name=".activity.GradientActivity"/>

        <activity android:name=".activity.SgzActivity"/>

        <activity android:name=".activity.ThreadPoolActivity"/>

        <activity android:name=".activity.DisplayDialogFragment"/>
        
        <activity android:name=".activity.ScrollerActivity"/>

        <activity android:name=".activity.WindowActivity"/>

        <activity android:name=".activity.DrawActivity"/>

        <activity android:name=".activity.Draw2Activity"/>

        <activity android:name=".activity.RefreshViewActivity"/>

        <activity android:name=".activity.WebActivity"/>
    </application>

</manifest>
